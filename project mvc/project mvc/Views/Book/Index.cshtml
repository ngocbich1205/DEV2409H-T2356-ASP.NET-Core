@{
    ViewData["Title"] = "Index";
}
<h2>danh sách các cuốn sách</h2>
<!-- hiển thị các comboobox trên form-->
<form action="" method="POST" class="form-inline" role="form">
    <div class="form-group">
        <select name="AuthorId" class="form-control" asp-items="@ViewBag.authors">
            <option value="">Chon tac gia</option>
        </select>
        <select name="GenreId" class="form-control" asp-items="@ViewBag.genres">
            <option value="">Chon the loai</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Tim kiem</button>
    <a asp-action="Create" class="btn btn-danger">them moi</a>
</form>
<hr/>
<!--hiển thị danh sách các cuốn sách-->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Thể loại</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model){
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                 <td>@book.AuthorId</td>
                  <td>@book.GenreId</td>
                <td>@book.Price</td>
                <td>
                    <img src="@book.Image" alt="@book.Title" width="40"/>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn tbn-sm btn-primary">Sua</a>
                </td>
            </tr>
        }
    </tbody>
</table>